<idea-plugin>
    <id>ski.chrzanow.foldableprojectview</id>
    <name>Foldable ProjectView</name>
    <vendor>hsz</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                groupId="tools"
                key="foldableProjectView.name"
                bundle="messages.FoldableProjectView"
                id="preferences.packagesearch.PackageSearchGeneralConfigurable"
                instance="ski.chrzanow.foldableprojectview.options.FoldableProjectViewConfigurable"/>

        <treeStructureProvider
                implementation="ski.chrzanow.foldableprojectview.projectView.FoldableTreeStructureProvider"/>
    </extensions>

    <actions>
        <action id="ProjectView.FoldRootFiles"
                class="ski.chrzanow.foldableprojectview.actionSystem.FoldRootFilesAction"
                text="Fold Root Files"
                description="Action that lets you fold the files located in the root of your project">
            <add-to-group
                    group-id="ProjectView.ToolWindow.SecondaryActions"
                    relative-to-action="ProjectView.FlattenPackages"
                    anchor="before"/>
        </action>
    </actions>
</idea-plugin>
